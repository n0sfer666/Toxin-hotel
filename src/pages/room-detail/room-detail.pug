extends ../template-page/template-page

include ../../components/headline/headline
include ../../components/amenity/amenity
include ../../components/piechart/piechart
include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/booking/booking

block append head
  title Room-detail

block prepend container
  -
    const pageClass = 'room-detail'

block append content
  main.room-detail__content
    .room-detail__gallery
      .room-detail__gallery-main
        img(class='room-detail__img', src='./img/detail-888-1.jpg', alt='detail-888-1')
      .room-detail__gallery-addition
        img(class='room-detail__img', src='./img/detail-888-2.jpg', alt='detail-888-2')
        img(class='room-detail__img', src='./img/detail-888-3.jpg', alt='detail-888-3')
    .room-detail__container
      .room-detail__details
        .room-detail__amenities
          .room-detail__title
            +headline({type: 'h2', title: 'Сведения о номере'})
          +amenity({ icon: 'insert_emoticon', title: 'Комфорт', description: 'Шумопоглащающие стены', withLine: true})
          +amenity({icon: 'location_city', title: 'Удобство', description: 'Окно в каждой из спален', withLine: true})
          +amenity({icon: 'whatshot', title: 'Уют', description: 'Номер оснащён камином', withLine: false})

        .room-detail__piechart
          .room-detail__title
            +headline({type: 'h2', title: 'Впечатления от номера'})
          +piechart({perfect: 130, good: 65, satisfactorily: 65, disappoint: 0})
        .room-detail__comments
          .room-detail__title
            +headline({type: 'h2', title: 'Отзывы посетителей номера'})
          p.room-detail__title-comments 2 отзыва
          .room-detail__comments-element
            +comment({ login: 'user-1', likeCount: '12', isLiked: true, name: 'Мурад Сарафанов', timeAgo: '5 дней назад', comment: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей'})
          .room-detail__comments-element
            +comment({ login: 'user-2', likeCount: '2', name: 'Патрисия Стёклышкова', timeAgo: 'Неделю назад', comment: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент'})
        .room-detail__rules
          .room-detail__title
            +headline({type: 'h2', title: 'Правила'})
          -
            const bullets = ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']
          +bullet-list({titles: bullets})
        .room-detail__cancel
          .room-detail__title
            +headline({type: 'h2', title: 'Отмена'})
          article.room-detail__cancel-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

      .room-detail__booking
        +booking()