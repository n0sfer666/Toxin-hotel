include ../button/button
include ../header-menu/header-menu

mixin header({isAuth = false, login = 'Cosmin Negoita', loginButton = 'Войти', signUpButton = 'Зарегистрироваться', links = [ {title: 'О нас', href: 'https://www.metalamp.ru/'}, {type: 'popup', title: 'Услуги', popupItems: [{title: 'Букинг', href: 'https://www.booking.com/'}, {title: 'жукинг', href: 'http://xn--80aexocohdp.xn--p1ai/30-%D0%B8%D0%BD%D1%82%D0%B5%D1%80%D0%B5%D1%81%D0%BD%D1%8B%D1%85-%D1%84%D0%B0%D0%BA%D1%82%D0%BE%D0%B2-%D0%BE-%D0%B6%D1%83%D0%BA%D0%B0%D1%85/'}]}, {title: 'Вакансии', href: 'https://www.hh.ru/'}, {title: 'Новости', href: 'https://ria.ru/'}, {type: 'popup', title: 'Соглашения', popupItems: [{title: 'О мире', href: 'https://ru.wikipedia.org/wiki/%D0%94%D0%B5%D0%B9%D1%82%D0%BE%D0%BD%D1%81%D0%BA%D0%B8%D0%B5_%D1%81%D0%BE%D0%B3%D0%BB%D0%B0%D1%88%D0%B5%D0%BD%D0%B8%D1%8F'}]} ] } = {})
  header.header
    .header__logo
      +logo({isFull: true})
    .header__nav-bar
      .header__menu
        each linkText in links
          +header-menu(linkText)
      if isAuth
        p.header__login #{login}
      else
        .header__buttons
          form(class='header__button-sign-in', action='sign-in.html')
            +button({style: 'border', title: loginButton})
          form(class='header__button-sign-up', action='registration.html')
            +button({style: 'gradient', title: signUpButton})